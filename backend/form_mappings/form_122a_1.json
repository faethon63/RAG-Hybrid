{
  "form_id": "122a_1",
  "form_name": "Chapter 7 Statement of Your Current Monthly Income",
  "description": "Determines whether debtor's income is low enough to qualify for Chapter 7",
  "fields": [
    {
      "pdf_field": "Debtor1.Name",
      "human_label": "Debtor 1 name",
      "profile_path": "personal_info.full_name",
      "required": true,
      "format": "text",
      "sensitive": false
    },
    {
      "pdf_field": "Case number1",
      "human_label": "Case number (if known)",
      "profile_path": null,
      "required": false,
      "format": "text",
      "sensitive": false
    },
    {
      "pdf_field": "Bankruptcy District Information",
      "human_label": "Bankruptcy district",
      "profile_path": null,
      "default_value": "Central District of California",
      "required": true,
      "format": "dropdown",
      "sensitive": false
    },
    {
      "pdf_field": "CheckBox3",
      "human_label": "Marital/filing status",
      "profile_path": null,
      "default_value": "/Not married",
      "required": true,
      "format": "checkbox",
      "sensitive": false,
      "notes": "States: [0]=/Married but not filing, [1]=/Not married, [2]=/Maried and filing. Single filer = /Not married"
    },
    {
      "pdf_field": "terrorism If necessary list other sources on a separate page and put the total below 1",
      "human_label": "Line 2: Gross wages, salary, tips (6-month avg)",
      "profile_path": null,
      "default_value": "0.00",
      "required": true,
      "format": "currency",
      "sensitive": false,
      "notes": "Debtor is self-employed, no W-2 wages"
    },
    {
      "pdf_field": "terrorism If necessary list other sources on a separate page and put the total below 2",
      "human_label": "Line 3-10: Other income sources (6-month avg)",
      "profile_path": "computed_totals.for_means_test_b122a1.schedule_c_monthly",
      "required": true,
      "format": "currency",
      "sensitive": false,
      "notes": "Schedule C net profit averaged over 6 months"
    },
    {
      "pdf_field": "Quest11",
      "human_label": "Line 11: Total current monthly income",
      "profile_path": "computed_totals.for_means_test_b122a1.schedule_c_monthly",
      "required": true,
      "format": "currency",
      "sensitive": false,
      "notes": "Sum of all income lines. For self-employed single filer = Schedule C monthly"
    },
    {
      "pdf_field": "12B",
      "human_label": "Line 12b: Annualized CMI (Line 11 x 12)",
      "profile_path": "computed_totals.for_means_test_b122a1.annualized_from_bus_deposits",
      "required": true,
      "format": "currency",
      "sensitive": false,
      "notes": "Line 11 x 12. Compare to applicable median family income."
    },
    {
      "pdf_field": "13A",
      "human_label": "Line 13a: Household size",
      "profile_path": null,
      "default_value": "1",
      "required": true,
      "format": "number",
      "sensitive": false,
      "notes": "Single filer, no dependents indicated"
    },
    {
      "pdf_field": "13B",
      "human_label": "Line 13b: Applicable median family income",
      "profile_path": null,
      "required": true,
      "format": "currency",
      "sensitive": false,
      "notes": "Look up CA median for 1-person household on census.gov/DOJ site"
    },
    {
      "pdf_field": "13C",
      "human_label": "Line 13c: State of debtor's domicile",
      "profile_path": null,
      "default_value": "California",
      "required": true,
      "format": "text",
      "sensitive": false
    },
    {
      "pdf_field": "14a",
      "human_label": "Line 14: Comparison result",
      "profile_path": null,
      "required": true,
      "format": "checkbox",
      "sensitive": false,
      "notes": "States: [0]=/12b less or equal to 13, [1]=/12b more than 13. Check [0] if CMI <= median."
    }
  ],
  "notes": "Field names are pypdf dotted notation. CheckBox3 = marital status (NOT CheckBox1 which is abuse presumption). Checkbox values must be the /State name from the AP/N dictionary."
}
