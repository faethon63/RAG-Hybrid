      "sensitive": false
    },
    {
      "pdf_field": "Line6_Pension_Retirement",
      "human_label": "Line 6: Pension and retirement income",
      "profile_path": null,
      "default_value": 0,
      "required": true,
      "format": "currency",
      "sensitive": false
    },
    {
      "pdf_field": "Line7_Other_Income",
      "human_label": "Line 7: Any amounts paid on a regular basis for household expenses (non-debtor contributions)",
      "profile_path": null,
      "default_value": 0,
      "required": true,
      "format": "currency",
      "sensitive": false
    },
    {
      "pdf_field": "Line8_Unemployment",
      "human_label": "Line 8: Unemployment compensation",
      "profile_path": null,
      "default_value": 0,
      "required": false,
      "format": "currency",
      "sensitive": false
    },
    {
      "pdf_field": "Line9_Other_Sources",
      "human_label": "Line 9: Income from all other sources (specify)",
      "profile_path": null,
      "default_value": 0,
      "required": false,
      "format": "currency",
      "sensitive": false
    },
    {
      "pdf_field": "Line10_Spouse_Income",
      "human_label": "Line 10: Spouse's income (if filing jointly or not separate)",
      "profile_path": null,
      "default_value": 0,
      "required": false,
      "format": "currency",
      "sensitive": false,
      "notes": "Single filer - no spouse income"
    },
    {
      "pdf_field": "Line11_Total_CMI",
      "human_label": "Line 11: Total current monthly income (sum lines 2-10)",
      "profile_path": "computed_totals.for_means_test_b122a1.schedule_c_monthly",
      "required": true,
      "format": "currency",
      "sensitive": false,
      "notes": "For single self-employed filer, this equals Line 3"
    },
    {
      "pdf_field": "Line12_Annualized_CMI",
      "human_label": "Line 12: Annualized CMI (Line 11 x 12)",
      "profile_path": "computed_totals.for_means_test_b122a1.annualized_from_bus_deposits",
      "required": true,
      "format": "currency",
      "sensitive": false,
      "notes": "Line 11 x 12. Compare to applicable median family income."
    },
    {
      "pdf_field": "Line13_Household_Size",
      "human_label": "Line 13: Household size",
      "profile_path": null,
      "default_value": 1,
      "required": true,
      "format": "number",
      "sensitive": false,
      "notes": "Single filer, no dependents indicated"
    },
    {
      "pdf_field": "Line14_State_Median",
      "human_label": "Line 14: Applicable median family income for household size",
      "profile_path": null,
      "required": true,
      "format": "currency",
      "sensitive": false,
      "notes": "Look up CA median for 1-person household. As of 2025: ~$67,433"
    },
    {
      "pdf_field": "Line15_Comparison",
      "human_label": "Line 15: Is Line 12 less than or equal to Line 14?",
      "profile_path": null,
      "required": true,
      "format": "checkbox",
      "sensitive": false,
      "notes": "If yes, presumption of abuse does not arise. Check applicable box."
    }
