      "required": true,
      "format": "text",
      "sensitive": false
    },
    {
      "pdf_field": "Case_Number",
      "human_label": "Case number (if known)",
      "profile_path": null,
      "required": false,
      "format": "text",
      "sensitive": false
    },
    {
      "pdf_field": "District",
      "human_label": "Bankruptcy district",
