# RAG-Hybrid System - Environment Configuration
# Copy this file to .env and fill in your values

# === API Keys (Required) ===
ANTHROPIC_API_KEY=your_key_here
PERPLEXITY_API_KEY=your_key_here
TAVILY_API_KEY=your_key_here

# === Local LLM (Ollama) ===
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen3:8b

# === Vector DB ===
CHROMADB_PATH=./data/chromadb
CHROMADB_COLLECTION=rag_docs

# === Embedding ===
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# === Server ===
FASTAPI_PORT=8000
STREAMLIT_PORT=8501

# === Authentication ===
JWT_SECRET=change_me_to_random_hex_string
ALLOWED_USERS=admin:$2b$12$your_bcrypt_hash_here

# === RAG Settings ===
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7
MAX_TOKENS=2000
TEMPERATURE=0.7

# === Rate Limiting ===
RATE_LIMIT_RPM=30
RATE_LIMIT_DAILY=500

# === Logging ===
LOG_LEVEL=INFO
LOG_PATH=./logs
