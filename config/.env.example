# TogetherOS RAG System - Environment Configuration
# Copy this to .env and fill in your API keys

# ============================================================================
# API KEYS (REQUIRED)
# ============================================================================

# Claude API (from your Claude Pro subscription)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_claude_api_key_here

# Perplexity API (for research)
# Get from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Tavily API (backup search - optional)
# Get from: https://tavily.com
TAVILY_API_KEY=your_tavily_api_key_here

# Groq API (FREE orchestrator - Llama 3.3 70B)
# Get from: https://console.groq.com (no credit card required)
GROQ_API_KEY=your_groq_api_key_here

# Idealista API (for direct real estate listings in Spain/Portugal/Italy)
# Request access at: https://developers.idealista.com/access-request
# Leave empty until you receive API credentials
IDEALISTA_API_KEY=
IDEALISTA_API_SECRET=

# ============================================================================
# LOCAL SYSTEM CONFIGURATION
# ============================================================================

# Local Ollama settings
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:14b

# Model Configuration
# Groq (FREE orchestrator - routes queries to appropriate model)
GROQ_MODEL=llama-3.3-70b-versatile
# Groq model for tool calling (must support function calling)
GROQ_TOOL_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# Claude 4.5 models (latest - Jan 2026)
CLAUDE_OPUS_MODEL=claude-opus-4-5-20251101
CLAUDE_SONNET_MODEL=claude-sonnet-4-5-20250929
CLAUDE_HAIKU_MODEL=claude-haiku-4-5-20251001

# Perplexity model (web search)
PERPLEXITY_MODEL=sonar

# ChromaDB settings
CHROMADB_PATH=./data/chromadb
CHROMADB_COLLECTION=togetheros_docs

# Document paths (adjust for your system)
DOCS_PATH=G:/Coopeverything/TogetherOS/docs
PROJECT_KB_PATH=./data/project-kb

# ============================================================================
# VPS CONFIGURATION (for remote access)
# ============================================================================

# VPS connection
VPS_HOST=your_vps_ip_or_domain
VPS_USER=your_vps_user
VPS_SSH_PORT=22

# Web interface ports
FASTAPI_PORT=8000
STREAMLIT_PORT=8501

# PC connection (for VPS to reach your PC)
PC_TUNNEL_PORT=8002
PC_API_URL=http://localhost:8002

# ============================================================================
# AUTHENTICATION
# ============================================================================

# Generate a secure random string for JWT secret
# Example: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here

# User credentials (comma-separated)
# Format: username:hashed_password
# Generate hash: python -c "import bcrypt; print(bcrypt.hashpw(b'your_password', bcrypt.gensalt()).decode())"
ALLOWED_USERS=george:$2b$12$...your_bcrypt_hash

# ============================================================================
# RAG SYSTEM SETTINGS
# ============================================================================

# Embedding model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Retrieval settings
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# LLM settings
MAX_TOKENS=2000
TEMPERATURE=0.7

# Search settings
WEB_SEARCH_ENABLED=true
PERPLEXITY_SEARCH_ENABLED=true
LOCAL_RAG_ENABLED=true

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

LOG_LEVEL=INFO
LOG_PATH=./logs
ENABLE_METRICS=true

# ============================================================================
# RATE LIMITING
# ============================================================================

# Requests per minute per user
RATE_LIMIT_RPM=30

# Daily request limit per user
RATE_LIMIT_DAILY=500
